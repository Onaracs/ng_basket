<div class="span3">

  <div class="basket-wrapper">

    <h2>BASKETS</h2>
    
    <ul class="baskets">

      <li>
        <a ui-sref="basket.shared">
          <div class="basket-list-item">
            Inbox
          </div>
        </a>
      </li>

      <li>
        <input type="text" 
                ng-show="showForm"
                ng-model="newBasketName"
                form="newBasketForm">
      </li>

      <li ng-repeat="basket in baskets | orderBy: 'name'"
          ui-sref-active="active">
        <a ui-sref="basket.links({basketName: basket.name,
                                  basketID: basket.id})">
          <div class="basket-list-item">
            {{basket.name}}
          </div>
        </a>
      </li>


    </ul> <!-- baskets -->

    <new-basket-button
          show-form="showForm">
    </new-basket-button>

  </div> <!-- basket-wrapper -->

</div>

<div class="span9">

  <div ui-view></div>

</div>