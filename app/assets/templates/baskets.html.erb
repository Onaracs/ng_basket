<div class="span3">

  <div class="basket-wrapper">

    <h2 class="wrapper-header">Baskets</h2>

    <new-basket-button
          show-form="showForm">
    </new-basket-button>

    <ul class="baskets">

      <li>
        <form form="newBasketForm"
              ng-show="showForm"
              ng-submit="createBasket()">
          <input type="text" 
                  ng-model="newBasketName">
          <input type="submit" value="CREATE">
        </form>
      </li>

      <li>
        <a ui-sref="basket.shared">
          <div class="basket-list-item">
            Inbox
          </div>
        </a>
      </li>


      <li ng-repeat="basket in baskets | orderBy: 'name'"
          ui-sref-active="active">
        <a ui-sref="basket.links({basketName: basket.name,
                                  basketID: basket.id})">
          <div class="basket-list-item">
            {{basket.name}}
            <p ng-if="user.id != basket.user_id">
              (Shared)
            </p>
          </div>
        </a>
      </li>


    </ul> <!-- baskets -->

  </div> <!-- basket-wrapper -->

</div>

<div class="span9">

  <div ui-view></div>

</div>