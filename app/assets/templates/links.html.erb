<h2 class="basket-name">{{basketName}}</h2>

<div ng-class="{'show-modal': deleteBasket === true}">
  <popup-delete-modal
        delete-basket="deleteBasket"
        basket-id="basketID"
  ></popup-delete-modal>
</div>

<div class="delete-basket-check" 
      ng-click="deleteBasket = !deleteBasket">
      <!-- ng-click="deleteBasket(basketID)"> -->
  Delete Basket
</div>

<ul class="link-list">

  <li ng-repeat="link in links | orderBy: '-created_at'">

    <div class="link-wrapper">
      <i class="fa fa-trash link-trash"
          ng-click="deleteLink(link.folder_id, link.id)"></i>
      <a href="{{link.url}}" target="_blank" class="link">
        <!-- <img ng-src="{{link.image}}" alt="test"/> -->
        <p class="date-time">{{link.created_at}}</p>
        <p class="title">{{link.title}}</p>
        <!-- <p class="description">{{link.description}}</p> -->
        <p class="message">{{link.message | limitTo: 15 }}{{link.message.length > 15 ? '...' : ''}}</p>
        <!-- <p>{{link.description}}</p> -->
      </a>
    </div>  <!-- link-wrapper -->

  </li> <!-- ng-repeat -->

</ul>